.type-list {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.type {
  flex: none;
  position: relative;
  width: 200rpx;
  margin-bottom: 30rpx;
}
.type-title {
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
  text-align: center;
  top: 50%;
  margin-top: -30rpx;
  left: 0;
  z-index: 2;
  position: absolute;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}
.type-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}