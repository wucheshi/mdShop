/**index.wxss**/

/* top-type-list --start */
.type-list {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #010101;
}
.type-list view {
  flex: none;
  width: 25%;
  text-align: center;
}
.type-list .active {
  border-bottom: 2px solid #f60;
  color: #f60;
}
/* top-type-list --end */

/* banner --start */
.banner {
  width: 100%;
  min-height: 100rpx;
}
.slide-image {
  width: 100%;
}
/* banner --end */

/* middle-banner --start */
.middle-banner {
  padding: 30rpx;
}
.middle-banner image{
  width: 690rpx;
  height: 142rpx;
}
/* middle-banner --end */

/* menu --start */
.menu-list {
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
}
.menu {
  flex: 1;
  text-align: center;
  font-size: 20rpx;
  margin-top: 10px;
  color: #333333;
}
.menu-img {
  width: 44rpx;
  height: 44rpx;
  margin: 0 auto;
}
/* menu --end */

/* intro --start */
.intro {
  width: 100%;
  margin-top: 30rpx;
}
.intro-title {
  text-align: center;
}
.intro-title_first {
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-size: 32rpx;
  position: relative;
}
.intro-title_first:after, .intro-title_first:before {
  content: '';
  width: 115rpx;
  height: 1rpx;
  background-color: #ccc;
  position: absolute;
  top: 50%;
  right: 180rpx;
  z-index: 2;
}
.intro-title_first:before {
  left: 180rpx;
}
.intro-title_sub {
  color: #000;
  font-size: 28rpx;
}
.intro-banner {
  width: 100%;
  margin: 30rpx auto;
}
.pro-list {
  padding: 0 10rpx 0 30rpx;
  box-sizing: border-box;
}
.pro {
  float: left;
  width: 30%;
  margin-right: 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.pro image {
  width: 218rpx;
  height: 285rpx;
}
.pro-name {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}
.pro-price-group {
  margin-top: -10rpx;
  text-align: center;
}
.pro-price {
  color: #f20303;
  font-size: 20rpx;
}
.pro-oldprice {
  color: #ccc;
  font-size: 20rpx;
  text-decoration: line-through;
  margin-left: 20rpx;
}
/* intro --end */