.topic-main-title {
  text-align: center;
  font-size: 34rpx;
  color: #000;
  margin: 60rpx auto;
}
.topic-header {
  padding: 0 30rpx;
  box-sizing: border-box;
}
.topic-header-title {
  font-size: 30rpx;
  color: #000;
}
.topic-tags {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 20rpx;
  height: auto;
  overflow: hidden;
}
.topic-tags view {
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  border-radius: 2rpx;
  color: #000;
  border: 1rpx solid #ccc;
  margin: 0 20rpx 20rpx 0;
}

/* topic-banner --start */
.topic-banner {
  width: 100%;
}
.topic-banner image {
  width: 100%;
}
/* topic-banner --end */

.topic-list {
  padding: 20rpx 30rpx;
}
.topic-top image, .topic-operate image {
  width: 44rpx;
  height: 44rpx;
  float: left;
}
.topic-top image {
  margin: 10rpx;
}
.topic-title {
  font-size: 28rpx;
}
.topic-pTime {
  font-size: 20rpx;
  color: #333;
}
.topic-content_text {
  font-size: 30rpx;
  color: #646464;
  margin: 10rpx 0;
}
.topic-content_images, .topic-operate {
  display: flex;
  justify-content: space-between;
}
.topic-content_images image {
  flex: none;
  width: 209rpx;
}
.topic-operate {
  margin: 20rpx 0;
}
.topic-operate view {
  flex: 1;
  font-size: 24rpx;
  color: #c3c3c3;
  height: 64rpx;
  line-height: 64rpx;
  display: flex;
  justify-content: center;
}
.topic-operate view + view {
  border-left: 1px solid #f5f5f5;
}
.topic-operate image {
  margin: 10rpx 20rpx 10rpx 0;
}
